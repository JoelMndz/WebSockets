{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": "./src",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
  },
  "include": [
    "src/**.ts",
    "tests/**.ts",
    "playground/**/**.ts", "src/infraestructura/docs/swaggerOptions.ts",
  ],
  "exclude": ["node_modules"]
}
